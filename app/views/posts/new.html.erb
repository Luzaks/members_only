<% provide(:title, "New comment") %>
<h1>New Comment</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@post) do |f| %>
  
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control' %>
  
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>